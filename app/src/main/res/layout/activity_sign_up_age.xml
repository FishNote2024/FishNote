<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:background="@color/backgroundBlue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        tools:context=".signUp.SignUpActivity">

        <TextView
            android:layout_marginTop="90dp"
            android:text="안녕하세요, 지수님!"
            style="@style/Header1B"
            android:textColor="@color/textBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:text="지수님의 만선을 위해 몇 가지 정보를 알려주세요."
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="84dp"
            android:text="연령대를 선택해주세요"
            android:textColor="@color/textBlack"
            style="@style/Header3B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <Spinner
                android:id="@+id/ageRange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/spinner_home_register_background"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/yearNextBtn1"
            style="@style/Header3R"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:backgroundTint="@color/gray2"
            android:text="다음"
            android:background="@drawable/rounded"
            android:textColor="@color/backgroundWhite"
            android:layout_marginTop="279dp"
            android:enabled="false"/>
    </LinearLayout>
</layout>