<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:background="@color/backgroundBlue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        tools:context=".signUp.SignUpActivity">

        <TextView
            android:layout_marginTop="90dp"
            android:text="정확한 계산을 위해\n조업 정보를 알려주세요!"
            style="@style/Header1B"
            android:textColor="@color/textBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:text="데이터 분석 이외에 다른 용도로 사용되지 않아요."
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="45dp"
            android:text="소속된 수협 조합을 검색하여 선택해주세요"
            android:textColor="@color/textBlack"
            style="@style/Header3B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layerType="none"
                android:hint="조합 이름을 입력해주세요"
                android:textColorHint="@color/gray3"
                style="@style/Body1"
                android:paddingLeft="16dp"
                android:inputType="text"
                android:background="@null"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/yearNextBtn2"
            style="@style/Header3R"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:backgroundTint="@color/gray2"
            android:text="다음"
            android:background="@drawable/rounded"
            android:textColor="@color/backgroundWhite"
            android:layout_marginTop="279dp"/>
    </LinearLayout>
</layout>